<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Dark Mode Toggle -->
    <button class="theme-toggle" id="themeToggle">
        <i class="icon fas fa-sun" id="themeIcon"></i>
        <span id="themeText">Light Mode</span>
    </button>

    <div class="container">
        <header>
            <h1><%= title %></h1>
        </header>

        <div class="card form-card">
            <form action="<%= action %>" method="POST">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="orderDispatchDate">Dispatch Date</label>
                        <input type="date" id="orderDispatchDate" name="orderDispatchDate" value="<%= sale ? sale.orderDispatchDate.toISOString().split('T')[0] : '' %>" required>
                    </div>
                    <div class="form-group">
                        <label for="vendorName">Vendor Name</label>
                        <input type="text" id="vendorName" name="vendorName" value="<%= sale ? sale.vendorName : '' %>" required>
                    </div>
                    <div class="form-group">
                        <label for="contact">Contact</label>
                        <input type="text" id="contact" name="contact" value="<%= sale ? sale.contact : '' %>">
                    </div>
                    <div class="form-group">
                        <label for="area">Area</label>
                        <input type="text" id="area" name="area" value="<%= sale ? sale.area : '' %>" required>
                    </div>
                    <div class="form-group">
                        <label for="transport">Transport</label>
                        <input type="text" id="transport" name="transport" value="<%= sale ? sale.transport : '' %>" required>
                    </div>
                    <div class="form-group">
                        <label for="productOrdered">Product Ordered</label>
                        <select id="productOrdered" name="productOrdered" required>
                            <option value="">Select a product</option>
                            <% if (typeof products !== 'undefined' && products.length > 0) { %>
                                <% products.forEach(product => { %>
                                    <option value="<%= product %>" <%= sale && sale.productOrdered === product ? 'selected' : '' %>><%= product %></option>
                                <% }); %>
                            <% } %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="qtyOrdered">Quantity Ordered</label>
                        <input type="number" id="qtyOrdered" name="qtyOrdered" value="<%= sale ? sale.qtyOrdered : '' %>" required>
                    </div>
                    <div class="form-group">
                        <label for="totalBillAmount">Total Bill Amount (INR)</label>
                        <input type="number" id="totalBillAmount" name="totalBillAmount" value="<%= sale ? sale.totalBillAmount : '' %>" step="0.01" required>
                    </div>
                    <div class="form-group">
                        <label for="dueDate">Due Date</label>
                        <input type="date" id="dueDate" name="dueDate" value="<%= sale && sale.dueDate ? sale.dueDate.toISOString().split('T')[0] : '' %>">
                    </div>
                    <div class="form-group">
                        <label for="paymentStatus">Payment Status</label>
                        <select id="paymentStatus" name="paymentStatus" required>
                            <option value="Due" <%= sale && sale.paymentStatus === 'Due' ? 'selected' : '' %>>Due</option>
                            <option value="Paid" <%= sale && sale.paymentStatus === 'Paid' ? 'selected' : '' %>>Paid</option>
                            <option value="Overdue" <%= sale && sale.paymentStatus === 'Overdue' ? 'selected' : '' %>>Overdue</option>
                        </select>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="submit-btn">Save</button>
                    <a href="/" class="cancel-btn">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Dark Mode Toggle Functionality
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = document.getElementById('themeIcon');
        const themeText = document.getElementById('themeText');
        const body = document.body;

        // Check for saved theme preference or default to light mode
        const currentTheme = localStorage.getItem('theme') || 'light';
        body.setAttribute('data-theme', currentTheme);
        updateThemeUI(currentTheme);

        themeToggle.addEventListener('click', () => {
            const currentTheme = body.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

            body.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeUI(newTheme);
        });

        function updateThemeUI(theme) {
            if (theme === 'dark') {
                themeIcon.className = 'icon fas fa-moon';
                themeText.textContent = 'Dark Mode';
            } else {
                themeIcon.className = 'icon fas fa-sun';
                themeText.textContent = 'Light Mode';
            }
        }
    </script>
</body>
</html>